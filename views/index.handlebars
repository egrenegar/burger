<!--Setup the index.handlebars to have the template that Handlebars can render onto.-->
<!--Create a button in index.handlebars that will submit the user input into the database.-->
<div class="jumbotron jumbotron-fluid">
    <div class="container">
        <h1 class="display-4 text-center">Eat-Da-Burger</h1>
        <img src="../public/img/cheeseburger.png" width= "250" height="250"/>
    </div>
</div>

<div class="container">
    <div class="row text-center">
        <div class="col">
            <h2>Burgers to be Devoured:</h2>
            <ul>
                {{#each burgers}}
                <li>
                    {{burger_name}}

                    {{!-- <button class="change-sleep" data-id="{{id}}" data-newsleep="{{sleep}}">
                        {{#if sleep}}SLEEP TIME!{{else}}WAKE UP!{{/if}}
                    </button> --}}
                </li>
                {{/each}}
            </ul>
        </div>
        <div class="col">
            <h2>Devoured Burgers</h2>

            <ul>
                {{!-- {{#each cats}}
                {{#if sleepy}}
                {{> cats/cat-block sleep=false}}
                {{/if}}
                {{/each}} --}}
            </ul>
        </div>
    </div>

</div>
<div class="container">
    <div class="row text-center">
        <div class="col">
            <h2>Add a Burger</h2>
        </div>

    </div>
    <div class="row text-center">
        <div class="col">
            <div>
                <form class="create-form">

                    <div class="form-group">
                        <label for="ca">Burger Name:</label>
                        <input type="text" id="ca" name="name">
                    </div>

                    <button type="submit" class="btn btn-primary">Add Burger</button>
                </form>
            </div>
        </div>

    </div>
</div>
<header class="container text-center py-3">
    <img src="/img/hamburger-clipart-1.png" width="200" height="200" />
    <h1 class="display-4 text-danger pt-3">Eat-Da-Burger!</h1>
</header>

<div class="container pt-2 pb-3">
    <div class="row">
        <div class="col">
            <h3 class="text-center">Burgers to be Devoured:</h3>
            <ul class="list-group">
                {{#each burgers}}
                {{#unless devoured}}
                <li class="list-group-item">
                    {{burger_name}}
                    <button class="change-devour btn btn-sm btn-secondary justify-content-end" data-id="{{id}}" data-devoured="{{devoured}}">
                        Devour it!
                    </button>
                </li>
                {{/unless}}
                {{/each}}
            </ol>
        </div>
        <div class="col">
            <h3 class="text-center">Devoured Burgers:</h3>
            <ul class="list-group">
                {{#each burgers}}
                {{#if devoured}}
                <li class="list-group-item">
                    {{burger_name}}
                </li>
                {{/if}}
                {{/each}}
            </ul>
        </div>
        <div class="container py-3">
            <div class="row text-center">
                <div class="col">
                    <h4>Add a Burger:</h4>
                </div>
            </div>
            <div class="row text-center">
                <div class="col">
                    <form class="create-form py-2">
                        <label for="burgername">Burger Name:</label>
                        <input type="text" id="burgername" name="name">
                        <button type="submit" class="btn btn-secondary btn-sm">Submit</button>
                    </form>
                    <p>Enter the name of a burger you want to eat!</p>
                </div>
            </div>
        </div>
    </div>
</div>